# LLM Provider Keys (configure at least one)
ANTHROPIC_API_KEY=sk-ant-...
GOOGLE_API_KEY=...
OPENAI_API_KEY=sk-...

# Database
PRIMARY_DB_TYPE=bigquery
BIGQUERY_PROJECT=my-gcp-project
BIGQUERY_DATASET=my_dataset
BIGQUERY_CREDENTIALS_PATH=/path/to/service-account.json

POSTGRES_URL=postgresql+asyncpg://user:pass@localhost:5432/mydb
SQLITE_URL=sqlite+aiosqlite:///./local.db

# LLM Models (fallback order: default → secondary → fallback)
DEFAULT_MODEL=claude-opus-4-6
SECONDARY_MODEL=gemini-2.5-pro
FALLBACK_MODEL=gpt-4o

# Schema Cache
SCHEMA_CACHE_TTL_SECONDS=3600

# App
APP_HOST=0.0.0.0
APP_PORT=8000
LOG_LEVEL=INFO
